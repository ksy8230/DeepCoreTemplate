{
  "extends": ["eslint:recommended", "plugin:import/errors", "plugin:react/recommended", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "rules": {
    "react/prop-types": 0,
    "react/display-name": "off"
  },
  "plugins": ["react", "html", "prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
